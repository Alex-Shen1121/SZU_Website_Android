<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AdminMenu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#6A1A1A"
        android:src="@drawable/szu_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3D1D1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/userIdentity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/ForceOffline1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="强制下线" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/black" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3D1D1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="修改栏目："
                android:textSize="20sp"
                android:id="@+id/columnTitle"/>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:id="@+id/blank3"
                android:visibility="invisible"/>

            <Spinner
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/informType"
                android:visibility="invisible"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateTime"
                android:visibility="invisible"
                android:background="#E3C1C1"
                android:hint="日期：xxxx/xx/xx"
                android:textSize="20sp"
                android:inputType="date"
                android:singleLine="true"/>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:id="@+id/blank2"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E3C1C1"
                android:hint="请输入标题："
                android:textSize="20sp"
                android:id="@+id/informTitle"
                android:visibility="invisible"
                android:singleLine="true"/>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:id="@+id/blank"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E3C1C1"
                android:hint="请输入地点："
                android:textSize="20sp"
                android:id="@+id/place"
                android:singleLine="true"
                android:visibility="invisible"/>
            
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/submitInform"
                android:text="提交"/>

        </LinearLayout>






    </RelativeLayout>

</LinearLayout>